{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"module": "ES2020",
		"jsx": "preserve",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"webpack-env"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}
